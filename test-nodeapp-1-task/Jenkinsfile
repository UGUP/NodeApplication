//     def sshCredentials = credentials('Jenkins-server')
//     sshagent([sshCredentials]) {
//       sh "ssh -i ${sshCredentials.privateKey} ubuntu@10.0.2.94"
//     }
//   }
//   }
// }

stage("SSH into App host") {
  steps {
     environment { 
                AN_ACCESS_KEY = credentials('Jenkins-server') 
            }
            sh "ssh -i ${AN_ACCESS_KEY}  ubuntu@10.0.2.94"
  }

}




